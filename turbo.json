{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "SHOPIFY_STORE_DOMAIN",
    "SHOPIFY_REVALIDATION_SECRET",
    "SHOPIFY_STOREFRONT_ACCESS_TOKEN",
    "SITE_NAME",
    "COMPANY_NAME",
    "NEXT_PUBLIC_VERCEL_URL",
    "TWITTER_SITE",
    "TWITTER_CREATOR"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
